<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbarless" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.District" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mapColorPrimary</item>
        <item name="colorPrimaryDark">@color/mapColorPrimaryDark</item>
        <item name="colorAccent">@color/mapColorAccent</item>
        <item name="android:windowBackground">@color/mapColorBackground</item>
    </style>

    <style name="Starter">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Starter.Heading">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="StarterButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
